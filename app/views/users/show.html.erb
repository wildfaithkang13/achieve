<div class="container">
  <div class = "row">
    <h2>フォロー一覧</h2>
    <!--
    followed_usersはrailsに元からあるメソッド
    特定のユーザーからフォローしているユーザーを取得する
    -->
    <% @user.followed_users.each do |user| %>
    <div class="container-child col-md-3 col-sm-4 col-xs-6 ">
      <div class="row">
          <div class="panel panel-default">
              <div class="panel-heading">
                <%= show_followered_img(user) %>
              </div>
              <div class="panel-body">
                <p><b>ユーザー名</b><br>
                  <%= user.name %></p>
              </div>
              <div class="panel-footer">
                <p><b>メールアドレス</b><br>
                <%= user.email %><p>
              </div>
          </div>
        </div>
      </div>
    <% end %><br>
  </div>

  <div class = "row">
    <h2>フォロワー一覧</h2>
    <% @user.followers.each do |user| %>
        <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                  <%= show_follower_img(user) %>
                </div>
                <div class="panel-body">
                  <p><b>ユーザー名</b><br>
                    <%= user.name %></p>
                </div>
                <div class="panel-footer">
                  <p><b>メールアドレス</b><br>
                  <%= user.email %><p>
                </div>
            </div>
          </div>
        </div>
    <% end %>
</div>
</div>
